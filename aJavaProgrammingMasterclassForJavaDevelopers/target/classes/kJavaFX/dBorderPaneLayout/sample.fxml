
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<BorderPane fx:controller="kJavaFX.dBorderPaneLayout.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label text="This label is in the top position" alignment="CENTER" prefWidth="300"
               BorderPane.alignment="CENTER"
        style="-fx-border-color: blue; -fx-border-width: 3; -fx-border-style: dashed"/>
    </top>

    <center>
        <Label text="Center label looooooooooooooooooooooooooooooooooooooooooooooooooooooooooong" alignment="CENTER"/>
    </center>

    <left>
        <Label text="Left label short" alignment="CENTER"
        BorderPane.alignment="BOTTOM_LEFT"/>
    </left>

    <right>
        <Label text="Right label short" alignment="CENTER"/>
    </right>

    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets bottom="10" right="10"/>
            </padding>
            <Button text="Okay" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>
        </HBox>
    </bottom>

</BorderPane>